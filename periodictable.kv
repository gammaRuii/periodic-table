Manager:
    MainScreen:
    ElScreen:
    SeriesScreen:

<MainScreen>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        cols: 1
        #size_hint: None,None
        canvas.before:
            Rectangle:
                pos: self.center_x - 550, self.center_y - 550
                size: (1100,1100)
                source: "pt_back.png"


        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            MainBody:
                size_hint: None, None
                width: 2869
                height: 1569
        ScrollView:
            do_scroll_x: True
            size_hint: 1, None
            height: 200
            on_size: app.redrawLegend(self)
            Legend:
                id: legend
                size_hint: None, None
                width: 1490
                height: 200


<ElScreen>:
    name: "element"

    BoxLayout:
        orientation: "vertical"

        cols: 1
        Button:
            id: namebutton2
            size_hint: 1, 0.2
            font_size: 100
            markup: True
        Button:
            id: sumbutton2
            halign: "center"
            font_size: 35
            size_hint: 1, 0.45
            on_size: app.redefWidth(self)
        ElementGrid:
            cols: 2

            Label:
                text: "Atomic number"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Label:
                id: numbutton2
            Label:
                text: "Symbol"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Label:
                id: symbutton2
            Label:
                text: "Category"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Label:
                id: catbutton2
            Label:
                text: "Average atomic mass"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Label:
                id: aaabutton2
            Label:
                text: "Electron configuration"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Label:
                id: econfigbutton2

        Button:
            text: "Back"
            size_hint: 1, 0.125
            background_color: (255/255.0, 50/255.0, 50/255.0, 1)
            on_release:
                app.root.transition.direction = "right"
                app.root.current = "main"

