Manager:
    MainScreen:
    ElScreen:
    SeriesScreen:

<MainScreen>:
    name: "main"
    BoxLayout:
        orientation: "vertical"
        cols: 1
        #size_hint: None,None
        canvas.before:
            Rectangle:
                pos: self.center_x - 550, self.center_y - 550
                size: (1100,1100)
                source: "pt_back.png"


        ScrollView:
            do_scroll_x: True
            do_scroll_y: True
            MainBody:
                size_hint: None, None
                width: 2869
                height: 1569
        ScrollView:
            do_scroll_x: True
            size_hint: 1, None
            height: 200
            on_size: app.redrawLegend(self)
            Legend:
                id: legend
                size_hint: None, None
                width: 1490
                height: 200


<ElScreen>:
    name: "element"

    BoxLayout:
        orientation: "vertical"

        cols: 1
        Label:
            id: namebutton2
            background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            size_hint: 1, 0.2
            font_size: 100
            markup: True
            
        Label:
            id: sumbutton2
            background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            halign: "center"
            font_size: 35
            size_hint: 1, 0.45
            on_size: app.redefWidth(self)
        ElementGrid:
