        Button:
            id: b6
            on_press: app.callback(self)
        Button:
            id: b7
            on_press: app.callback(self)
        Button:
            id: b8
            on_press: app.callback(self)
        Button:
            id: b9
            on_press: app.callback(self)
        Button:
            id: b10
            on_press: app.callback(self)
        Button:
            id: b11
            on_press: app.callback(self)
        Button:
            id: b12
            on_press: app.callback(self)
        Button:
            id: b13
            on_press: app.callback(self)
        Button:
            id: b14
            on_press: app.callback(self)
        Button:
            id: b15
            on_press: app.callback(self)
        Button:
            text: "Back"
            background_color: (255/255.0, 50/255.0, 50/255.0, 1)
            on_press:
                app.root.transition.direction = "right"
