Manager:
    MainScreen:
    ElScreen:
    SeriesScreen:

<MainScreen>:
    name: "main"
    ScrollView:
        do_scroll_x: True
        do_scroll_y: True
        MainBody:
            size_hint: None, None
            width: 1854
            height: 969

<ElScreen>:
    name: "element"
    BoxLayout:
        orientation: "vertical"
        cols: 1
        ElementGrid:
            cols: 2
            Button:
                text: "Name"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Button:
                id: namebutton2
            Button:
                text: "Number"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Button:
                id: numbutton2
            Button:
                text: "Symbol"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Button:
                id: symbutton2
            Button:
                text: "Category"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Button:
                id: catbutton2
            Button:
                text: "Average atomic mass"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Button:
                id: aaabutton2
            Button:
                text: "Electron configuration"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Button:
                id: econfigbutton2
            Button:
                text: "Overview"
                background_color: (0/255.0, 206/255.0, 235/255.0, 1)
            Button:
                id: sumbutton2
                multiline: True
                halign: "center"
        Button:
            text: "Back"
            size_hint: 1, 0.125
            background_color: (255/255.0, 50/255.0, 50/255.0, 1)
            on_release:
                app.root.transition.direction = "right"
                app.root.current = "main"

<SeriesScreen>:
